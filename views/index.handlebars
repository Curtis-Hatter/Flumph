{{#each shipments}}
{{#unless delivered}}

    <div class="row">
        <div class="col-1">

        </div>
        <div class="container col-10 shadow-lg m-3 rounded white2background">
            <div class="row p-5 border-bottom border-secondary">
                <div class="col-8">
                    <div class="row">
                        <h3></h3>
                        <h3><b>{{this.title}}</b></h3>
                    </div>
                    <div class="row">
                        <a href= {{this.trackingURL}} alt="Tracking Number">
                            <h4>{{this.tracking}}</h4>
                        </a>
                    </div>
                </div>
                <h3 class="col-4 ml-auto">{{this.carrier}}</h3>
            </div>
            <div class="row p-5">
                <h4><i>{{this.description}}</i></h4>
            </div>
        </div>
        <div class="col-1">

        </div>
    </div>
{{/unless}}
{{/each}}

