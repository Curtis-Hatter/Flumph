<div>
    <div class="row">
        <div class="col-1">
            {{!-- empty column --}}
        </div>
        <div class="col-10">
            <div class="container col-12 text-center header-style">
                <img src="/img/pending-orders.svg" width="90%">
            </div>
            <div class="mt-4 row-btn text-center">
                <a class="btn btn-primary black h3 link-color-alt btn-xl" id="newPackageBtn">Add
                    Package</a>
            </div>
        </div>
        <div class="col-1">
            {{!-- empty column --}}
        </div>
    </div>
</div>

{{#each shipments}}
{{#unless delivered}}

    <div class="row">
    <div class="col-1">
        {{!-- empty column --}}
    </div>
    <div class="container col-10 shadow-lg my-3 rounded white2background">
        <div class="row py-4 px-5 border-bottom border-secondary">
            <div class="col-10">
                <div class="row">
                    <h1><b>{{this.title}}</b></h1>
                </div>
                <div class="row">
                    <a class = "link-color" href={{this.trackingLink}} alt="Tracking Number">
                        <h2>{{this.tracking}}</h2>
                    </a>
                </div>
            </div>
            <h3 class="col-2"><img src={{this.carrier}} width="100%"></h3>
        </div>
        <div class="row p-5">
            <h2><i>{{this.description}}</i></h2>
        </div>
        <div>
            <img src="/img/in-transit.svg" class="mb-3" alt="Your order has been placed">
        </div>
    </div>
    <div class="col-1">
        {{!-- empty column --}}
    </div>
</div>
{{/unless}}
{{/each}}

